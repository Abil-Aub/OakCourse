@model List<DTO.AdsDTO>
@{
    ViewData["Title"] = "AdsList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>Ads List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Ads</a></li>
        <li class="breadcrumb-item active"><a>Ads List</a></li>
    </ol>

</section>

<br />
<div class="card-footer">
    <a class="btn btn-primary" href="/Admin/Ads/AddAds">Add Ads</a>
</div>

<div class="card">
            
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Link</th>
                  <th>Image</th>
                  <th>Update</th>
                  <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                @foreach(var item in Model)
                {
                    <tr id="a_@item.ID">
                        <td>@item.Name</td>
                        <td> @item.Link</td>
                        <td> 
                            <img src="~/AdsImages/@item.ImagePath" width="60" height="40">
                        </td>

                        <td align="center" valign="middle">
                            <a href="/Admin/Ads/UpdateAds/@item.ID">
                                <img src="~/icons/Update.ico">
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <img src="~/icons/Delete.ico">
                            </a>
                        </td>
                    </tr>  
                }
                
                
                </tbody>
                <tfoot>
                <tr>
                  <th>Name</th>
                  <th>Link</th>
                  <th>Image</th>
                  <th>Update</th>
                  <th>Delete</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
