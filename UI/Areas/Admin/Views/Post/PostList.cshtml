@model List<DTO.PostDTO>
@{
    ViewData["Title"] = "PostList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>Post List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Post</a></li>
        <li class="breadcrumb-item active"><a>Post List</a></li>
    </ol>

</section>

<br />
<div class="card-footer">
    <a class="btn btn-primary" href="/Admin/Post/AddPost">Add Post</a>
</div>

<div class="card">
            
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>Category Name</th>
            <th>Add Date</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
            <tr id="a_@item.ID">
                <td>@item.Title</td>
                <td> @item.CategoryName</td>
                <td> 
                    @item.AddDate.ToString("dd.MM.yyyy, dddd")
                </td>

                <td align="center" valign="middle">
                    <a href="/Admin/Post/UpdatePost/@item.ID">
                        <img src="~/icons/Update.ico">
                    </a>
                </td>
                <td align="center" valign="middle">
                    <a href="#">
                        <img src="~/icons/Delete.ico">
                    </a>
                </td>
            </tr>  
        }
                
                
        </tbody>
        <tfoot>
        <tr>
            <th>Title</th>
            <th>Category Name</th>
            <th>Add Date</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
