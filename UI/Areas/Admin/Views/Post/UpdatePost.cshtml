
@{
    ViewData["Title"] = "UpdatePost";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>Update Post operation</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Post</a></li>
        <li class="breadcrumb-item active"><a>Update Post</a></li>
    </ol>

</section>

<br />
<div class="card-footer">
    <a class="btn btn-primary" href="/Admin/Post/PostList">Post List</a>
</div>

<section class="content">
    <div class="row">
        <div class="col-md-9">
            @Html.Partial("~/Areas/Admin/Views/Shared/MessageForm.cshtml")
            <script src="~/js/ckeditor/ckeditor.js"></script>
            <div class="box box-primary">
                @using(Html.BeginForm("UpdatePost", "Post", FormMethod.Post, new {@enctype="multipart/form-data"}))
                {
                    @Html.Partial("Partial/PostForm")
                }
            </div>
        </div>
    </div>
</section>
