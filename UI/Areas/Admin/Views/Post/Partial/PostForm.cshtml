
@model DTO.PostDTO

   <div class="box-boxy">
        <input hidden type="number" value="@Model.ID" name="ID" />

        <div class="form-group">
            <label>Category</label>
            @Html.DropDownList("CategoryID", Model.Categories, "Select Category", new { @class = "form-control"})
            @Html.ValidationMessageFor(x => x.CategoryID)
        </div>
        <div class="form-group">
            <label>Title</label>
            @Html.TextBoxFor(x => x.Title, new {@class="form-control",@placeholder="Title"})
            @Html.ValidationMessageFor(x => x.Title)
        </div>
        <div class="form-group">
            <label>Short Content</label>
            @Html.TextBoxFor(x => x.ShortContent, new {@class="form-control",@placeholder="Short Content"})
            @Html.ValidationMessageFor(x => x.ShortContent)
        </div>
        <div class="form-group">
            <label>Post Content</label>
            @Html.TextAreaFor(x => x.PostContent, new {@class="ckeditor",@placeholder="Post Content"})
            @Html.ValidationMessageFor(x => x.PostContent)
        </div>
        <div class="form-group">
            <label>Post Image</label>
            <br />
            <input type="file" name="PostImage" accept="image/gif,image/jpg,image/jpeg,image/png" multiple onchange="$('#PostImage')[0].src = window.URL.createObjectURL(this.files[0])" />
            <br />
            <img id="PostImage" width="300" height="200" />
        </div>
        <div class="form-group">
            <label>Tags</label>
            @Html.TextAreaFor(x => x.TagText, new {@class="form-control",@placeholder="Please use ',' to seperate tags"})
        </div>

        <div class="form-group">
            <input type="checkbox" class="form-check-inline" name="Slider" checked="@Model.Slider" value="true" />
            <label class="form-check-inline">Slider</label>
        </div>
        <div class="form-group">
            <input type="checkbox" class="form-check-inline" name="Area1" checked="@Model.Area1" value="true" />
            <label class="form-check-inline">Area1</label>
        </div>
        <div class="form-group">
            <input type="checkbox" class="form-check-inline" name="Area2" checked="@Model.Area2" value="true" />
            <label class="form-check-inline">Area2</label>
        </div>
        <div class="form-group">
            <input type="checkbox" class="form-check-inline" name="Area3" checked="@Model.Area3" value="true" />
            <label class="form-check-inline">Area3</label>
        </div>
        <div class="form-group">
            <input type="checkbox" class="form-check-inline" name="Notification" checked="@Model.Notification" value="true" />
            <label class="form-check-inline">Notification</label>
        </div>

        <div class="form-group">
            <label>Language</label>
            @Html.TextAreaFor(x => x.Language, new {@class="form-control",@placeholder="Language"})
            @Html.ValidationMessageFor(x => x.Language)
        </div>
        @if(Model.isUpdate)
        {
            <div class="card-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>Image</th>
                  <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PostImages)
                    {
                        <tr id="a_@item.ID">
                          <td>
                              <img src="~/PostImages/@item.ImagePath" width="60" height="40" />
                          </td>
                          <td align="center" valign="middle">
                              <a href="#">
                                  <img src="~/icons/Delete.ico">
                              </a>
                          </td>
                        </tr>
                    }
                    
                
                </tbody>
                <tfoot>
                <tr>
                  <th>Image</th>
                  <th>Delete</th>
                </tr>
                </tfoot>
              </table>
            </div>
        }

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
        </div> 
    </div>
