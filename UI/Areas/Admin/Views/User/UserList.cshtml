@model List<DTO.UserDTO>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>User List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>User</a></li>
        <li class="breadcrumb-item active"><a>User List</a></li>
    </ol>

</section>

<br />
<div class="card-footer">
    <a class="btn btn-primary" href="/Admin/User/AddUser">Add User</a>
</div>

<div class="card">
            
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>User Name</th>
                  <th>Image</th>
                  <th>Update</th>
                  <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                @foreach(var item in Model)
                {
                    <tr id="a_@item.ID">
                        <td>@item.Name</td>
                        <td> @item.Username</td>
                        <td> 
                            <img src="~/UserImages/@item.ImagePath" width="60" height="40">
                        </td>

                        <td align="center" valign="middle">
                            <a href="/Admin/User/UpdateUser/@item.ID">
                                <img src="~/icons/Update.ico">
                            </a>
                        </td>
                        <td align="center" valign="middle">
                            <a href="#">
                                <img src="~/icons/Delete.ico">
                            </a>
                        </td>
                    </tr>  
                }
                
                
                </tbody>
                <tfoot>
                <tr>
                  <th>Name</th>
                  <th>User Name</th>
                  <th>Image</th>
                  <th>Update</th>
                  <th>Delete</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->

